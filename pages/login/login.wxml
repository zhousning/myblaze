<view class="page" data-weui-theme="{{theme}}">
  <view class="weui-form">
    <view class="weui-flex">
      <view class="weui-flex__item"></view>
      <view class="weui-flex__item">
        <image src="/images/swjtlogo.png" mode="widthFix"/>
      </view>
      <view class="weui-flex__item"></view>
    </view>
    <view class="weui-form__control-area">
      <view class="weui-cells__group weui-cells__group_form">
        <view class="weui-cells weui-cells_form">
          <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd"><label class="weui-label">账号</label></view>
            <view class="weui-cell__bd">
              <input class="weui-input" placeholder="填写账号" placeholder-class="weui-input__placeholder" name="username"
                bindinput="usernameInput" />
            </view>
          </view>
          <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd">
              <label class="weui-label"> 密码</label>
            </view>
            <view class="weui-cell__bd">
              <input class="weui-input" placeholder="填写密码" placeholder-class="weui-input__placeholder" name="password"
                type="password" bindinput="passwordInput" />
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class="weui-form__opr-area">
      <a class="weui-btn weui-btn_primary" bindtap="login">登 录</a>
    </view>
    <view class="weui-form__extra-area">
      <view class="weui-footer">
        <view class="weui-footer__text">Copyright © 2020-2030 山东公用水务集团版权所有</view>
      </view>
    </view>
  </view>
</view>